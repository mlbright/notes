<div class="max-w-2xl mx-auto mb-8">
  <%= form_with url: search_notes_path, method: :get do |f| %>
    <div class="relative">
      <svg class="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/></svg>
      <%= f.search_field :q, value: params[:q], placeholder: "Search notes...", autofocus: true, class: "w-full pl-11 pr-4 py-3 bg-white border border-gray-200 rounded-xl text-sm shadow-sm focus:ring-2 focus:ring-amber-400 focus:border-transparent transition" %>
    </div>
  <% end %>
</div>

<% if params[:q].present? %>
  <p class="text-xs text-gray-400 mb-4 text-center">
    <%= @notes.respond_to?(:count) ? @notes.count : @notes.size %> result(s) for &ldquo;<%= params[:q] %>&rdquo;
  </p>
<% end %>

<% if @notes.present? %>
  <div class="columns-1 sm:columns-2 lg:columns-3 xl:columns-4 gap-4 space-y-4">
    <% @notes.each do |note| %>
      <%= render partial: "notes/card", locals: { note: note } %>
    <% end %>
  </div>
  <% if @pagy && @pagy.pages > 1 %>
    <div class="mt-10 flex justify-center">
      <%== @pagy.series_nav %>
    </div>
  <% end %>
<% elsif params[:q].present? %>
  <div class="text-center py-16">
    <svg class="mx-auto w-12 h-12 text-gray-300 mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/></svg>
    <p class="text-gray-400">No matching notes</p>
  </div>
<% end %>
</div>
