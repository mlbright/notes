<div class="max-w-2xl mx-auto">
  <%# ── Note card ── %>
  <div class="bg-white rounded-2xl border border-gray-200 shadow-sm overflow-hidden">
    <%# Header %>
    <div class="p-6 pb-0">
      <% if @note.title.present? %>
        <h1 class="text-xl font-medium text-gray-900 mb-1"><%= @note.title %></h1>
      <% end %>
      <div class="flex items-center flex-wrap gap-3 text-xs text-gray-400 mt-1">
        <span>Created <%= time_ago_in_words(@note.created_at) %> ago</span>
        <span>&middot;</span>
        <span>Edited <%= time_ago_in_words(@note.updated_at) %> ago</span>
        <% if @note.user != current_user %>
          <span>&middot;</span>
          <span>Shared by <%= @note.user.name %></span>
        <% end %>
        <% if @note.pinned? %>
          <span class="ml-auto">
            <svg class="w-4 h-4 text-amber-500 inline" fill="currentColor" viewBox="0 0 24 24"><path d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z"/></svg>
          </span>
        <% end %>
      </div>
    </div>

    <%# Tags %>
    <% if @note.tags.any? %>
      <div class="px-6 pt-3 flex flex-wrap gap-1.5">
        <% @note.tags.each do |tag| %>
          <span class="inline-block px-2.5 py-0.5 text-xs rounded-full font-medium" style="background-color: <%= tag.color %>18; color: <%= tag.color %>"><%= tag.name %></span>
        <% end %>
      </div>
    <% end %>

    <%# Body %>
    <div class="p-6 prose prose-sm max-w-none text-gray-700">
      <%= render_markdown(@note.body) %>
    </div>

    <%# Attachments %>
    <% if @note.attachments.any? %>
      <div class="px-6 pb-4">
        <div class="grid grid-cols-2 sm:grid-cols-3 gap-2">
          <% @note.attachments.each do |attachment| %>
            <div class="flex items-center gap-2 bg-gray-50 rounded-lg p-2.5 border border-gray-100">
              <svg class="w-4 h-4 text-gray-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.172 7l-6.586 6.586a2 2 0 102.828 2.828l6.414-6.586a4 4 0 00-5.656-5.656l-6.415 6.585a6 6 0 108.486 8.486L20.5 13"/></svg>
              <span class="text-xs text-gray-600 truncate flex-1"><%= attachment.filename %></span>
              <div class="flex items-center gap-1">
                <%= link_to rails_blob_path(attachment, disposition: :attachment), class: "text-gray-400 hover:text-gray-600" do %>
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/></svg>
                <% end %>
                <% if @note.editable_by?(current_user) %>
                  <%= button_to note_attachment_path(@note, attachment), method: :delete, class: "text-gray-400 hover:text-red-500", data: { turbo_confirm: "Remove?" } do %>
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/></svg>
                  <% end %>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <%# Action toolbar — Keep-style bottom bar %>
    <div class="px-4 py-2 border-t border-gray-100 flex items-center justify-between">
      <div class="flex items-center -ml-1">
        <% if @note.editable_by?(current_user) %>
          <%= link_to edit_note_path(@note), class: "p-2 rounded-full hover:bg-gray-100 transition", title: "Edit" do %>
            <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/></svg>
          <% end %>
        <% end %>
        <% if @note.user == current_user %>
          <%= link_to toggle_pin_note_path(@note), method: :patch, data: { turbo_method: :patch }, class: "p-2 rounded-full hover:bg-gray-100 transition", title: @note.pinned? ? "Unpin" : "Pin" do %>
            <svg class="w-5 h-5 <%= @note.pinned? ? 'text-amber-500' : 'text-gray-500' %>" fill="<%= @note.pinned? ? 'currentColor' : 'none' %>" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z"/></svg>
          <% end %>
          <% if @note.archived? %>
            <%= link_to unarchive_note_path(@note), method: :patch, data: { turbo_method: :patch }, class: "p-2 rounded-full hover:bg-gray-100 transition", title: "Unarchive" do %>
              <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4"/></svg>
            <% end %>
          <% elsif !@note.trashed? %>
            <%= link_to archive_note_path(@note), method: :patch, data: { turbo_method: :patch }, class: "p-2 rounded-full hover:bg-gray-100 transition", title: "Archive" do %>
              <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4"/></svg>
            <% end %>
          <% end %>
        <% end %>
        <%= link_to duplicate_note_path(@note), method: :post, data: { turbo_method: :post }, class: "p-2 rounded-full hover:bg-gray-100 transition", title: "Duplicate" do %>
          <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"/></svg>
        <% end %>
        <%= link_to export_note_path(@note), class: "p-2 rounded-full hover:bg-gray-100 transition", title: "Export" do %>
          <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/></svg>
        <% end %>
        <%= link_to note_note_versions_path(@note), class: "p-2 rounded-full hover:bg-gray-100 transition", title: "Version history" do %>
          <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
        <% end %>
      </div>
      <div class="flex items-center">
        <% if @note.user == current_user %>
          <% if @note.trashed? %>
            <%= link_to restore_note_path(@note), method: :patch, data: { turbo_method: :patch }, class: "p-2 rounded-full hover:bg-gray-100 transition", title: "Restore" do %>
              <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h10a8 8 0 018 8v2M3 10l6 6m-6-6l6-6"/></svg>
            <% end %>
            <%= button_to note_path(@note), method: :delete, class: "p-2 rounded-full hover:bg-red-50 transition", title: "Delete forever", data: { turbo_confirm: "Permanently delete this note?" } do %>
              <svg class="w-5 h-5 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/></svg>
            <% end %>
          <% else %>
            <%= button_to note_path(@note), method: :delete, class: "p-2 rounded-full hover:bg-gray-100 transition", title: "Move to trash", data: { turbo_confirm: "Move to trash?" } do %>
              <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/></svg>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <%# ── Sharing (owner only) ── %>
  <% if @note.user == current_user %>
    <div class="mt-6 bg-white rounded-2xl border border-gray-200 shadow-sm overflow-hidden">
      <div class="p-4 flex items-center justify-between border-b border-gray-100">
        <h3 class="text-sm font-medium text-gray-700 flex items-center">
          <svg class="w-4 h-4 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z"/></svg>
          Collaborators
        </h3>
      </div>
      <div class="p-4">
        <% if @note.shares.any? %>
          <div class="space-y-2 mb-4">
            <% @note.shares.includes(:user).each do |share| %>
              <div class="flex items-center justify-between py-1.5">
                <div class="flex items-center gap-2">
                  <div class="w-7 h-7 rounded-full bg-gray-200 text-gray-600 flex items-center justify-center text-xs font-medium"><%= share.user.name[0].upcase %></div>
                  <div>
                    <p class="text-sm text-gray-700"><%= share.user.name %></p>
                    <p class="text-xs text-gray-400"><%= share.user.email %></p>
                  </div>
                </div>
                <%= button_to note_share_path(@note, share), method: :delete, class: "text-xs text-gray-400 hover:text-red-500 transition", data: { turbo_confirm: "Revoke access?" } do %>
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/></svg>
                <% end %>
              </div>
            <% end %>
          </div>
        <% end %>
        <%= form_with url: note_shares_path(@note), method: :post, class: "flex gap-2" do |f| %>
          <%= f.email_field :email, placeholder: "Add people by email...", class: "flex-1 rounded-lg border-gray-200 bg-gray-50 text-sm px-3 py-2 focus:ring-2 focus:ring-amber-400 focus:border-transparent" %>
          <%= f.submit "Share", class: "px-4 py-2 text-sm bg-amber-500 text-white rounded-lg hover:bg-amber-600 transition cursor-pointer font-medium" %>
        <% end %>
      </div>
    </div>

    <%# Upload attachment %>
    <div class="mt-4">
      <%= form_with url: note_attachments_path(@note), method: :post, multipart: true, class: "flex gap-2 items-center" do |f| %>
        <%= f.file_field :files, multiple: true, class: "flex-1 text-sm text-gray-500 file:mr-3 file:py-2 file:px-4 file:rounded-lg file:border-0 file:text-sm file:font-medium file:bg-gray-100 file:text-gray-700 hover:file:bg-gray-200 file:cursor-pointer" %>
        <%= f.submit "Attach", class: "px-4 py-2 text-sm bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition cursor-pointer font-medium" %>
      <% end %>
    </div>
  <% end %>
</div>
