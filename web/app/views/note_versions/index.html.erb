<div class="max-w-2xl mx-auto">
  <div class="flex items-center justify-between mb-4">
    <h1 class="text-sm font-medium text-gray-500 uppercase tracking-wider">Version history</h1>
    <%= link_to note_path(@note), class: "text-sm text-amber-500 hover:text-amber-600 font-medium" do %>
      &larr; Back to note
    <% end %>
  </div>

  <% if @versions.empty? %>
    <div class="text-center py-16">
      <svg class="mx-auto w-20 h-20 text-gray-200 mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
      <p class="text-gray-400">No previous versions</p>
    </div>
  <% else %>
    <div class="space-y-2">
      <% @versions.each do |version| %>
        <div class="bg-white rounded-xl border border-gray-200 shadow-sm px-4 py-3 hover:shadow-md transition">
          <div class="flex items-center justify-between">
            <div class="flex items-center gap-3">
              <div class="w-8 h-8 rounded-full bg-gray-100 flex items-center justify-center text-xs font-bold text-gray-500">
                v<%= version.version_number %>
              </div>
              <div>
                <% if version.title.present? %>
                  <p class="text-sm font-medium text-gray-900"><%= version.title %></p>
                <% end %>
                <p class="text-xs text-gray-400"><%= time_ago_in_words(version.created_at) %> ago</p>
              </div>
            </div>
            <div class="flex items-center gap-1">
              <%= link_to note_note_version_path(@note, version), class: "p-2 rounded-full hover:bg-gray-100 transition", title: "View" do %>
                <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/></svg>
              <% end %>
              <%= button_to restore_note_note_version_path(@note, version), method: :post, class: "p-2 rounded-full hover:bg-green-50 transition", title: "Restore", data: { turbo_confirm: "Restore this version?" } do %>
                <svg class="w-4 h-4 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h10a8 8 0 018 8v2M3 10l6 6m-6-6l6-6"/></svg>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
