<div class="max-w-2xl mx-auto">
  <div class="flex items-center justify-between mb-4">
    <h1 class="text-sm font-medium text-gray-500 uppercase tracking-wider">Version <%= @version.version_number %></h1>
    <div class="flex items-center gap-2">
      <%= link_to note_note_versions_path(@note), class: "text-sm text-gray-500 hover:text-gray-700" do %>
        All versions
      <% end %>
      <%= button_to restore_note_note_version_path(@note, @version), method: :post, class: "px-4 py-1.5 text-sm bg-green-500 text-white rounded-lg hover:bg-green-600 transition font-medium", data: { turbo_confirm: "Restore this version?" } do %>
        Restore
      <% end %>
    </div>
  </div>

  <div class="bg-white rounded-2xl border border-gray-200 shadow-sm overflow-hidden">
    <div class="px-5 py-3 border-b border-gray-100 flex items-center gap-3">
      <div class="w-8 h-8 rounded-full bg-gray-100 flex items-center justify-center text-xs font-bold text-gray-500">
        v<%= @version.version_number %>
      </div>
      <div>
        <% if @version.title.present? %>
          <p class="text-sm font-medium text-gray-900"><%= @version.title %></p>
        <% end %>
        <p class="text-xs text-gray-400">Saved <%= time_ago_in_words(@version.created_at) %> ago</p>
      </div>
    </div>
    <div class="p-6 prose prose-sm max-w-none text-gray-700">
      <%= render_markdown(@version.body) %>
    </div>
  </div>
</div>
